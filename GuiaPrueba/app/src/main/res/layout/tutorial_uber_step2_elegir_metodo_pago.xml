<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Boton para ir atrás-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_unclicked"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
            >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_left"
                />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Agregar tarjeta"
                android:textSize="18sp" />
        </LinearLayout>

        <!--Seccion de botones para elegir metodo pago-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
        >
            <!--Tarjeta numero-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de tarjeta"
                android:textSize="18sp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/editbox_selected"
                android:clickable="true"
                android:focusable="true"
            >
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_payment_method"
                />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_camara_logo"
                />
            </LinearLayout>

            <!--Expiración y demás-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
            >
                <!--Expiracion-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fecha de expiración"
                        android:textSize="18sp"
                    />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editors_text_card"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginVertical="6dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:focusable="true"
                    >
                        <EditText
                            android:id="@+id/etExpirationDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:hint="MM/YY"
                            android:background="@null"
                            android:textSize="16sp"
                        />
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_question_mark"
                        />
                    </LinearLayout>
                </LinearLayout>

                <!--CVV-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CVV"
                        android:textSize="18sp"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editors_text_card"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginVertical="6dp"
                        android:clickable="true"
                        android:focusable="true"
                    >
                        <EditText
                            android:id="@+id/etExpirationDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:hint="123"
                            android:background="@null"
                            android:textSize="16sp"
                            />
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_question_mark"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- País -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="País"
                    android:textSize="18sp"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editors_text_card"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginVertical="6dp"
                    android:clickable="true"
                    android:focusable="true"
                >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/ic_cr_flag"
                    />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="Costa Rica"
                        android:textSize="16sp"
                    />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_down_arrow_logo"
                    />
                </LinearLayout>
            </LinearLayout>

            <!--Opcional-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sobrenombre (Opcional)"
                    android:textSize="18sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editors_text_card"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginVertical="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ejemplo: nombre en la tarjeta o cuenta"
                        android:textSize="16sp"
                        android:background="@null"
                        android:layout_marginHorizontal="10dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Siguiente"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</RelativeLayout>