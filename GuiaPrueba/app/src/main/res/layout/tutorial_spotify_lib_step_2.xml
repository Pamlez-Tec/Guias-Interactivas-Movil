<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <!-- CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <!-- Imagen portada -->
        <ImageView
            android:id="@+id/imgArtista"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/rock_led_zeppelin"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Título del Mix -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Led Zeppelin Mix"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deep Purple, The Who y Cream"
            android:textColor="#1DB954"
            android:textSize="17sp"
            android:layout_marginBottom="2dp" />

        <!-- Info adicional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creado para ti · Acerca de las recomendaciones"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Duración -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 h 51 min"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Ícono + que cambia a check -->
            <ImageView
                android:id="@+id/iconoAgregar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_add_white"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_marginEnd="16dp" />

            <!-- Botón de descarga -->
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/stat_sys_download"
                android:layout_marginEnd="16dp"
                app:tint="#FFFFFF" />

            <!-- Botón de más opciones -->
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_more"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Lista de canciones -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Canción 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whole Lotta Love"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Led Zeppelin"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Canción 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Immigrant Song"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Led Zeppelin"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Canción 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black Dog"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Led Zeppelin"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Canción 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dazed and Confused"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Led Zeppelin"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>

