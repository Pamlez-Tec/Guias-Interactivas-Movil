<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            >

            <!--Seccion habilitar ubicacion-->
            <LinearLayout
                android:id="@+id/locationAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5bc2f"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_location_logo"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Compartir ubicación deshabilitado. Toca aquí para habilitarlo."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="10dp"
                    />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_marginRight="6dp"
                    />
            </LinearLayout>

            <!--Seccion Lupa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="16dp"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:paddingVertical="12dp"
                    android:src="@drawable/ic_lupa_logo"
                    android:padding="4dp"
                    android:layout_marginLeft="6dp"
                />
                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/etLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Escriba el punto de recogida"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:background="@null"
                    />

                <!--Seccion later-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/roundbutton"
                    android:layout_marginHorizontal="12dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_calendar_logo"
                        android:layout_marginHorizontal="6dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:text="Después"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Suggestions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Sugerencias"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Ver todo"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:backgroundTint="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
            >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/suggestions_layout"
                >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_carro_logo"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Viaje"
                        android:textColor="#000000"
                        android:textSize="15sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/suggestions_layout"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_food_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Comida"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/suggestions_layout"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_envio_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Envíos"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/suggestions_layout"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_moto_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Moto"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f1f3f5"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="100dp"
                >
                <!--Home-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_home_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Casa"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <!-- Servicios -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_menu_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Servicios"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <!--Actividades-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_bookmark_logo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Actividad"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <!--Cuenta-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginVertical="10dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_account"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Cuenta"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <!--Modal agregado-->
    <FrameLayout
        android:id="@+id/locationPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC0f0f0f"
        android:visibility="gone"
    >
        <!--android:visibility="gone"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/roundstyle"
            android:padding="24dp"
            android:layout_margin="26dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para una mejor experiencia, su dispositivo deberá activar la ubicación precisa."
                android:textColor="#000"
                android:textSize="22sp"
                android:layout_marginBottom="10dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Las siguientes configuraciones deben estar activadas:"
                android:textColor="#000"
                android:textSize="18sp"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
            >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_location_on_logo"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del dispositivo"
                    android:textSize="14sp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_gps_logo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precisión de la ubicación: proporciona una ubicación más precisa para aplicaciones y servicios. Para ello, Google procesa periódicamente información sobre los sensores del dispositivo y las señales inalámbricas de este para recopilar colectivamente la ubicación de las señales inalámbricas. Estas se utilizan sin identificarle para mejorar la precisión de la ubicación y los servicios basados ​​en la ubicación, así como para mejorar, proporcionar y mantener los servicios de Google, basándonos en los intereses legítimos de Google y de terceros, para satisfacer las necesidades de los usuarios."
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Puedes cambiar esto en cualquier momento en la configuraciones."
                android:textSize="14sp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
            >

                <LinearLayout
                    android:id="@+id/btnCancelLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:paddingVertical="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="No gracias"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="24dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/turnOnLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:paddingVertical="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Encender"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="24dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>