<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Portada -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_playlist"
            android:background="#2A2A2A"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp" />

        <!-- Nombre de la playlist -->
        <TextView
            android:id="@+id/textPlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi playlist #1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu nombre de usuario"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Agregar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empecemos a expandir tu playlist"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAgregarPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar a esta playlist"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canciones recomendadas"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para ayudarnos a recomendarte canciones, intenta agregar algo de música a tu playlist."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
