<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#2A263A"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_uber_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Uber"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTutorialRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EFE7E7"
        android:drawableEnd="@drawable/ic_play_arrow"
        android:padding="16dp"
        android:text="C贸mo registrarse en Uber"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnTutorialAsignarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EFE7E7"
        android:drawableEnd="@drawable/ic_play_arrow"
        android:padding="16dp"
        android:text="C贸mo indicar la ubicaci贸n del punto destino y espera"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnTutorialPedirUber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EFE7E7"
        android:drawableEnd="@drawable/ic_play_arrow"
        android:padding="16dp"
        android:text="C贸mo solicitar un Uber"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnTutorialPagoUber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EFE7E7"
        android:drawableEnd="@drawable/ic_play_arrow"
        android:padding="16dp"
        android:text="Sistema de pago del Uber"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="Volver"
        android:textColor="#EFE7E7"
        android:textSize="22sp" />
</LinearLayout>
