<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#286ef0"
    android:padding="16dp">

    <!--Hacemos un Mock de la parte de Uber-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!--Logo-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_uber_logo"
            android:contentDescription="Uber Logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
        />

        <!--Nombre aplicaciÃ³n-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Uber"
            android:textColor="#fefffe"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
        />

        <!--Tagline-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Move with Safety"
            android:textColor="#fefffe"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
        />

        <LinearLayout
            android:id="@+id/btnGetStartedUber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_rounded_button"
            android:padding="40px"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Get Started"
                android:textColor="#fefefe"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAllCaps="false"
            />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>